        <div class="container-fluid">

            <header class="page-header">

                <h1 class="text-center">Repeated Word Counter</h1>    

            </header>

            <section class="col-md-6 col-md-offset-3">




                
                <form action='/results'>
                    
                    <div class='form-group'>
                        <label for='word'>Try a word:</label>
                        <input id='word' name='word' class='form-control' type='text' placeholder=''></input>
                    <div>    
                    
                    <div class='form-group'>
                        <label for='blob'>Now add a list of words or body of text:</label>
                        <textarea id='blob' name='blob' class='form-control' rows="4" type='text' placeholder=''></textarea>
                    </div>

                    <div class="form-group">
                        <button type='submit' type='button' class='btn btn-primary'>See results!</button>
                    </div>

                </form>

            </section>    

